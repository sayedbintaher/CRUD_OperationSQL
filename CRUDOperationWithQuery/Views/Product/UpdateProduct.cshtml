@model Product

<div class="container">
    <div class="mt-5 p-5 border border-2 border-dark rounded">
        <h1 class="text-center">Updating Product</h1>
        <form method="post">
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Product Name</label>
                <input asp-for="Name" type="text" class="form-control" id="Name" placeholder="Please enter name">
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Code" class="form-label">Product Code</label>
                <input asp-for="Code" type="text" class="form-control" id="Code" placeholder="Please enter code">
                <span class="text-danger" asp-validation-for="Code"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Type" class="form-label">Product Type</label>
                <input asp-for="Type" type="text" class="form-control" id="Type" placeholder="Please enter type">
                <span class="text-danger" asp-validation-for="Type"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Price" class="form-label">Price</label>
                <input asp-for="Price" type="number" class="form-control" id="Price">
                <span class="text-danger" asp-validation-for="Price"></span>
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
</div>